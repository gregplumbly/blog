<div class="flex justify-center mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-4 w-full md:w-auto">
    <% @blog_posts.each do |blog_post| %>
      <div class="flex flex-col max-w-screen-sm text-slate-900">
   <%= blog_post.content %>
    <div
      class="mt-5 w-full text-lg leading-10 font-[420] tracking-[2.7px] max-md:max-w-full"
    >
      Q&A
    </div>
    <div class="w-full text-4xl font-medium leading-10 max-md:max-w-full">
      In the garden with: Dan Pearson
    </div>
    <div
      class="w-full text-2xl leading-8 underline font-[390] text-neutral-700 max-md:max-w-full"
    >
      <%= link_to "Read more", blog_post_path(blog_post) %>
    </div>
  </div>
    <% end %>
  </div>
</div>
